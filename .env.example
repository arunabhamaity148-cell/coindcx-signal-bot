# ARUN Bot Environment Variables
# Copy this to .env and fill in your values
# NEVER commit .env to GitHub!

# CoinDCX API Keys
COINDCX_API_KEY=your_coindcx_api_key_here
COINDCX_SECRET=your_coindcx_secret_here

# ChatGPT API
CHATGPT_API_KEY=your_openai_api_key_here
CHATGPT_MODEL=gpt-4o-mini

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Bot Settings
AUTO_TRADE=false
MODE=QUICK

# MODE options:
# QUICK  - 5m timeframe, fast scalping, leverage 12x
# MID    - 15m timeframe, balanced, leverage 10x
# TREND  - 1h timeframe, high accuracy, leverage 15x