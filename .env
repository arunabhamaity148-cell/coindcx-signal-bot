# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# CoinDCX API (OPTIONAL - for authenticated futures data)
# Leave empty to use public spot data instead
COINDCX_API_KEY=
COINDCX_API_SECRET=

# Trading Mode
# true = Use authenticated API for futures (requires API key)
# false = Use public spot data, show futures prices in signals
USE_AUTHENTICATED_API=true

# Trading Configuration
LEVERAGE=12
MIN_SIGNAL_SCORE=55
CHECK_INTERVAL_MINUTES=3
COOLDOWN_MINUTES=20
MAX_SIGNALS_PER_DAY=999

# BTC Stability Check (OPTIONAL - set to 'true' to enable)
ENABLE_BTC_CHECK=false

# Futures Markets (used when authenticated)
FUTURES_MARKETS=F-BTC_INR,F-ETH_INR,F-SOL_INR,F-MATIC_INR,F-XRP_INR,F-ADA_INR,F-DOGE_INR,F-DOT_INR,F-LTC_INR,F-LINK_INR,F-UNI_INR,F-AVAX_INR,F-ATOM_INR,F-TRX_INR,F-SHIB_INR,F-ARB_INR,F-OP_INR,F-APT_INR,F-SUI_INR,F-INJ_INR